{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <style>
        html, body {
            height: 100%;
        }
    </style>

    <div class="row bg-primary h-100 d-flex align-items-center">
        <main class="col-10 offset-1 col-lg-6 offset-lg-3 pt-4 pb-4 bg-light">
            {{ include('_errors.html.twig', {errors: viewModel.errors}) }}
            <form action="{{ url('user_login') }}" method="post">
                <div class="form-group">
                    <label for="nickname">Enter your nickname:</label>
                    <input type="text" class="form-control" id="nickname" name="nickname" value="{{ viewModel.nickname }}">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </main>
    </div>
{% endblock %}
