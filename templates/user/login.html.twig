{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container-fluid bg-primary h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6 offset-lg-3 pt-4 pb-4 bg-light">
                {{ include('_errors.html.twig', {errors: viewModel.errors}) }}
                <form action="{{ url('post_user_login') }}" method="post">
                    <div class="form-group">
                        <label for="nickname">Enter your nickname:</label>
                        <input type="text" class="form-control" id="nickname" name="nickname" value="{{ viewModel.nickname }}">
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
