{% extends 'layout.html.twig' %}

{% block title %}Calculator{% endblock %}

{% block main %}
    <div class="clearfix mb-3">
        <div class="btn-group btn-group-lg float-right">
            <a href="{{ url('calculator_mining') }}" class="btn btn-primary">Mining</a>
            <button type="button" class="btn btn-primary active">Inventory</button>
        </div>
    </div>

    <div class="text-right mb-3">
        <button type="submit" class="btn btn-primary btn-lg" form="form">Save</button>
    </div>

    {{ include('_errors.html.twig', {errors: viewModel.errors}) }}
    {{ include('_notices.html.twig', {notices: viewModel.notices}) }}

    <form action="{{ url('calculator_inventory') }}" method="post" id="form">
        <h2 class="mt-5">Materials stored in inventory</h2>
        {{ include('_grid.html.twig', {grid: viewModel.inventoryMaterialGrid}) }}
    </form>
{% endblock %}
